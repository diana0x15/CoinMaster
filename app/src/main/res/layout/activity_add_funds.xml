<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:padding="@dimen/small_margin">


    <LinearLayout
        android:id="@+id/activity_add_funds_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_add_funds_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/list_background"
            android:text="Cancel"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/activity_add_funds_add_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/gray_button"
            android:text="Add"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"/>
    </LinearLayout>


    <EditText
        android:id="@+id/activity_add_funds_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@id/activity_add_funds_buttons_layout"
        android:background="@drawable/list_background"
        android:inputType="numberDecimal"
        android:padding="@dimen/small_margin"
        android:textSize="20sp"/>


</RelativeLayout>