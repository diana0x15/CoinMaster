<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dianapislaru.coinmaster">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
        </activity>
        <activity android:name=".activities.PasswordActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.ListActivity"
            android:theme="@style/Transparent">
        </activity>
        <activity android:name=".activities.MenuActivity"
            android:theme="@style/Transparent">
        </activity>
        <activity android:name=".activities.AddItemActivity"
            android:theme="@style/Transparent">
        </activity>
        <activity android:name=".activities.AddFundsActivity"
            android:theme="@style/Transparent">
        </activity>
    </application>

</manifest>